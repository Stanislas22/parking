generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model City {
  id          Int      @id @default(autoincrement())
  name        String
  country     String
  location    String
  slug        String   @unique
  parkings    Parking[]
}

model Parking {
  id          Int      @id @default(autoincrement())
  name        String
  city_id     Int
  location    String
  numberOfSpots Int
  hourlyRate  Float
  city        City     @relation(fields: [city_id], references: [id])
}
